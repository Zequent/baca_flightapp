<MainControllerLayout>:
    orientation: "vertical"
    MDTopAppBar:
        md_bg_color: app.colors['Gold-primary']
        specific_text_color: app.colors['Black-primary']
        title: app.toolBarTitle
        left_action_items: 
            [
            ["menu", lambda x: app.openDropDownSettings(self)]
            ]
        mode: "end"
        #md_bg_color: app.theme_cls.primary_palette
    MDBoxLayout:
        orientation: "horizontal"
        size_hint: 1,0.1
        #md_bg_color: [1,0.398,0.796,1]
        ZequentButton:
            text: app.get_welcome_text()
            halign: "center"
        ZequentButton:
            text: app.get_welcome_text()
            halign: "center"
    ZequentCameraLayout:

    ScrollView:
        do_scroll_y: True
        MDGridLayout:
            size_hint_y: None
            orientation: "lr-tb"
            cols: 2 
            ZequentButton:        
                text: 'Hello 1'
            ZequentButton:
                text: 'World 1'