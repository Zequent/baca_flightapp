<ZequentRootLayout>:
    orientation: "vertical"
    MDTopAppBar:
        id: topAppBar
        type: "small"
        md_bg_color: app.customColors["first"]
        specific_text_color: app.customColors["black"]
        MDTopAppBarLeadingButtonContainer:
            MDActionTopAppBarButton:
                opacity: 0 if not app.connected else 100
                disabled: app.connected
                icon: "menu"
                on_release: nav_drawer.set_state("open")
        MDTopAppBarTitle:
            text: "AppBar Center-aligned"
            pos_hint: {"center_x": .5}

        MDTopAppBarTrailingButtonContainer:
            MDDropDownItem: 
                id: language_selection
                opacity: 0 if app.connected else 100
                disabled: app.connected
                pos_hint: {"center_x": .5, "center_y": .5}
                on_release: root.open_language_dropdown(self)
                MDDropDownItemText:
                    id: drop_text
                    text: "Language"
            
    MDNavigationLayout:
        ZequentRootScreenManager:
            id: sm
            ConnectionScreen:
            MainScreen:
        
        MDNavigationDrawer:
            id: nav_drawer
            radius: 0, dp(16), dp(16), 0

            MDNavigationDrawerMenu:

                MDNavigationDrawerLabel:
                    text: "Mail"

                MDNavigationDrawerItem:

                    MDNavigationDrawerItemLeadingIcon:
                        icon: "account"

                    MDNavigationDrawerItemText:
                        text: "Inbox"

                    MDNavigationDrawerItemTrailingText:
                        text: "24"

                MDNavigationDrawerDivider:

    