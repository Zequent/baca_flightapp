

<ZequentConnectionLayout>:
    size_hint: .5, 1
    ZequentAnchorLayout:
        ZequentConnectionButton:
            id: connect_dropdown
            text: "Connect Aircraft"
            on_press:
                self.checkGrid(root)
            currObject:
                connection_type
    ZequentGridLayout:
        cols:1 
        id: connection_type 
        ZequentAnchorLayout:
            ZequentDropDownItem:
                id: vehicle_item
                text: self.getInitialVehicle()
                on_release: self.openVehicleMenu(self)
                current_item: self.getInitialVehicle()
        ZequentAnchorLayout:
            ZequentButton:
                id: rfc_button
                text: 'RFC'
                disabled: True 
                on_press: 
                    lte_button.disabled = False
                    self.disabled=True
        ZequentGridLayout:
            cols:3
            ZequentAnchorLayout:
                ZequentButton:
                    id: lte_button
                    text: 'LTE'
                    disabled: False
                    on_press: 
                        rfc_button.disabled = False
                        self.disabled=True
            ZequentAnchorLayout:
                ZequentSingleTextInput:
                    opacity:
                        0 if not rfc_button.disabled else 1
                    id: lte_address
                    disabled: False
                    font_size: "40dp"
                    text: "127.0.0.1"
            ZequentAnchorLayout:
                opacity:
                    0 if not rfc_button.disabled else 1
                ZequentDropDownItem:
                    id: lte_connection_type
                    text: self.getInitialConnectionType()
                    on_release: self.openLTEConnectionTypeMenu(self)
                    current_item: self.getInitialConnectionType()
        ZequentAnchorLayout:
            ZequentLabel:
                id: connection_status_label
                text: root.connectionStatusText
        ZequentAnchorLayout:
            ZequentButton:
                id: connect_button
                text: 'Connect'
                on_press: 
                    root.start_connecting_process(self)
    ZequentAnchorLayout:
        ZequentConnectionButton:
            id: connect_dropdown
            text: "Choose Languages"
        