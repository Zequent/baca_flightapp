ZequentRootLayout:

<ZequentRootLayout@MDBoxLayout>
    orientation: "vertical"
    MapView:
        zoom: 20
        lat: 47
        lon: 11
    MDTopAppBar:
        md_bg_color: app.colors['Gold-primary']
        specific_text_color: app.colors['Black-primary']
        right_action_items:
            [
            ["./static/icons/language_selection.png", lambda x: app.changeLanguageOnStart(self)]
            ]
        mode: "end"
    ZequentConnectionType:
        id: connection_type
    ZequentLabel:
        id: connection_status_label
        text: app.getConnectionStatusText()
    ZequentButton:
        text: 'Connect'
        on_press: app.tryConnection(self, connection_type)
    
<MainControllerLayout>:
    orientation: "vertical"
    MDTopAppBar:
        md_bg_color: app.colors['Gold-primary']
        specific_text_color: app.colors['Black-primary']
        title: app.toolBarTitle
        left_action_items: 
            [
            ["menu", lambda x: app.openDropDownSettings(self)]
            ]
        right_action_items:
            [
            #["home", lambda x: app.callback(x), "", "Home"],
            #["message-star", lambda x: app.callback(x), "", "Message star"],
            #["message-question", lambda x: app.callback(x), "" , "Message question"],
            #["message-reply", lambda x: app.callback(x), "", "Message reply"],
            ["./static/icons/language_selection.png", lambda x: app.openDropDownLanguageSelection(self)]
            ]
        mode: "end"
        #md_bg_color: app.theme_cls.primary_palette
    MDBoxLayout:
        orientation: "horizontal"
        size_hint: 1,0.1
        #md_bg_color: [1,0.398,0.796,1]
        ZequentButton:
            text: app.get_welcome_text()
            halign: "center"
        ZequentButton:
            text: app.get_welcome_text()
            halign: "center"
    ZequentCameraSection:

    ScrollView:
        do_scroll_y: True
        MDGridLayout:
            size_hint_y: None
            orientation: "lr-tb"
            cols: 2 
            ZequentButton:        
                text: 'Hello 1'
            ZequentButton:
                text: 'World 1'

<ZequentConnectionType@MDBoxLayout>:
    orientation: "vertical"
    size_hint: 1, 0.3
    ZequentButton:
        id: rfc_button
        text: 'RFC'
        disabled: not lte_button.disabled 
        on_press: self.disabled = True
        font_size: "40dp"
    MDBoxLayout: 
        ZequentButton:
            id: lte_button
            text: 'LTE'
            disabled: not rfc_button.disabled
            on_press: self.disabled = True
            font_size: "40dp"
        ZequentSingleTextInput:
            id: lte_address
            disabled: not rfc_button.disabled
            font_size: "40dp"


<ZequentCameraSection@MDBoxLayout>
    id:camera_layout
    orientation: "horizontal"  
    columns: 2
    Camera:
        id: camera
        resolution: (1920, 1080)
        play: camera_switch.active
    MDBoxLayout:
        orientation: "horizontal"
        columns: 2
        Label:
            text: 'Camera status'
        Switch:
            id: camera_switch
            active: False
#### CUSTOM WIDGETS

##BUTTON
<ZequentButton@MDButton>
    font_size: "40dp"
    style: "filled"
    background_normal: ''
    background_color:  (0, 0,0,0)
    canvas.before:
        Color:
            rgba: app.colors["Gold-secondary"]
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [40]
    #on_press: self.background_color = app.colors["Jewel-primary"]
    #on_release: self.background_color = app.colors["Gold-secondary"]
    #background_down: DEFINE WITH IMAGE

<ZequentLabel@Label>
    font_size: "40dp"
    color: app.colors["Gold-primary"]

<ZequentSingleTextInput@TextInput>
    multiline: False