ZequentMDBoxLayout:

<ZequentMDBoxLayout@MDBoxLayout>:
    orientation: "vertical"
    MDTopAppBar:
        md_bg_color: app.colors['Gold-primary']
        specific_text_color: app.colors['Black-primary']
        title: app.toolBarTitle
        left_action_items: 
            [
            ["menu", lambda x: app.callback_1()]
            ]
        right_action_items:
            [
            ["home", lambda x: app.callback(x), "", "Home"],
            ["message-star", lambda x: app.callback(x), "", "Message star"],
            ["message-question", lambda x: app.callback(x), "" , "Message question"],
            ["message-reply", lambda x: app.callback(x), "", "Message reply"],
            ]
        mode: "end"
        #md_bg_color: app.theme_cls.primary_palette
    MDBoxLayout:
        orientation: "horizontal"
        size_hint: 1,0.1
        #md_bg_color: [1,0.398,0.796,1]
        ZequentButton:
            text: app.get_welcome_text()
            halign: "center"
        ZequentButton:
            text: app.get_welcome_text()
            halign: "center"
    ScrollView:
        do_scroll_y: True
        MDGridLayout:
            size_hint_y: None
            orientation: "lr-tb"
            cols: 2 
            ZequentButton:        
                text: 'Hello 1'
            ZequentButton:colors = {
        "Black-primary": [0,0,0,0.9],
        "Gold-primary": [0.78,0.56,0.05,1],
        "Gold-secondary": [0.78,0.56,0.05,0.5],
        "Jewel-primary": [0.00392, 0.14117, 0.3607]
    }
                text: 'World 1'
        

