ZequentRootLayout:

<ZequentRootLayout@MDBoxLayout>
    orientation: "vertical"
    ZequentConnectionType:
        id: connection_type
    ZequentLabel:
        id: connection_status_label
        text: app.getConnectionStatusText()
    ZequentButton:
        text: 'Connect'
        on_press: app.tryConnection(self, connection_type)
        
<MainControllerLayout>:
    orientation: "vertical"
    MDDropDownItem:
        pos_hint: {"center_x": .5, "center_y": .5}
        on_release: app.openDropDown(self)

        MDDropDownItemText:
            id: drop_text
            text: "Item"
    MDTopAppBar:
        md_bg_color: app.colors['Gold-primary']
        specific_text_color: app.colors['Black-primary']
        title: app.toolBarTitle
        left_action_items: 
            [
            ["menu", lambda x: app.openDropDown(self)]
            ]
        right_action_items:
            [
            ["home", lambda x: app.callback(x), "", "Home"],
            ["message-star", lambda x: app.callback(x), "", "Message star"],
            ["message-question", lambda x: app.callback(x), "" , "Message question"],
            ["message-reply", lambda x: app.callback(x), "", "Message reply"],
            ]
        mode: "end"
        #md_bg_color: app.theme_cls.primary_palette
    MDBoxLayout:
        orientation: "horizontal"
        size_hint: 1,0.1
        #md_bg_color: [1,0.398,0.796,1]
        ZequentButton:
            text: app.get_welcome_text()
            halign: "center"
        ZequentButton:
            text: app.get_welcome_text()
            halign: "center"
    ScrollView:
        do_scroll_y: True
        MDGridLayout:
            size_hint_y: None
            orientation: "lr-tb"
            cols: 2 
            ZequentButton:        
                text: 'Hello 1'
            ZequentButton:
                text: 'World 1'

<ZequentConnectionType@MDBoxLayout>:
    orientation: "vertical"
    size_hint: 1, 0.3
    ZequentButton:
        id: rfc_button
        text: 'RFC'
        disabled: not lte_button.disabled 
        on_press: self.disabled = True
        font_size: "40dp"
    MDBoxLayout: 
        ZequentButton:
            id: lte_button
            text: 'LTE'
            disabled: not rfc_button.disabled
            on_press: self.disabled = True
            font_size: "40dp"
        ZequentSingleTextInput:
            id: lte_address
            disabled: not rfc_button.disabled
            font_size: "40dp"

#### CUSTOM WIDGETS

##BUTTON
<ZequentButton@Button>
    font_size: "40dp"
    background_normal: ''
    background_color: app.colors["Gold-secondary"]
    on_press: self.background_color = app.colors["Jewel-primary"]
    on_release: self.background_color = app.colors["Gold-secondary"]
    #background_down: DEFINE WITH IMAGE

<ZequentLabel@Label>
    font_size: "50dp"
    color: app.colors["Gold-primary"]

<ZequentSingleTextInput@TextInput>
    multiline: False